{
    // Peka ut var din glslangValidator finns (om den inte ligger i din PATH).
    // Har du Vulkan SDK installerat ligger den oftast i bin-mappen.
    // "glslangValidator.glslangValidatorPath": "C:/VulkanSDK/1.3.xxx.x/Bin/glslangValidator.exe",

    "glsllint.glslangValidatorArgs": [
        "-V",
    ],

    // Associera filändelser med GLSL så att pluginet kickar igång
    "files.associations": {
        "*.vert": "glsl",
        "*.frag": "glsl",
        "*.comp": "glsl",
        "*.geom": "glsl",
        "*.tesc": "glsl",
        "*.tese": "glsl",
        "*.ini": "c",
    }
}